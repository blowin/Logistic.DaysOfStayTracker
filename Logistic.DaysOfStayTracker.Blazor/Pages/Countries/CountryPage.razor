@page "/countries"

<MudGrid Class="mt-4">
    <MudItem xs="12" sm="12" md="12">
        <MudText Typo="Typo.h3" Inline="@true">Страны</MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(Create)">+</MudButton>
    </MudItem>
    <MudItem xs="4">
        <MudTextField @bind-Value="_searchRequest.Name" For="() => _searchRequest.Name" Label="Название"></MudTextField>
    </MudItem>
    <MudItem xs="4">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="@(async () => await _table.SearchAsync())">Найти</MudButton>
    </MudItem>
    
    <MudItem xs="12" sm="12" md="12" Class="pt-4">
        <CountryTable @ref="_table" SearchRequest="_searchRequest"></CountryTable>
    </MudItem>
</MudGrid>
