@page "/country/{Id:guid?}"

<MudGrid>
    <MudItem xl="12" xs="12" xxl="12">
        <MudCard>
            <MudForm Model="@_model" Style="min-height: 200px;">
                <MudCardContent>
                    <MudItem xs="4">
                        <MudTextField @bind-Value="_model.Name" For="@(() => _model.Name)" Immediate="true" Label="Название"></MudTextField>
                    </MudItem>
                    <MudItem xs="4">
                        <MudSwitch @bind-Checked="@_model.IsEuropeanUnion" For="@(() => _model.IsEuropeanUnion)" Label="Страна евросоюза" Color="Color.Primary" />
                    </MudItem>
                </MudCardContent>
            </MudForm>
            <MudCardActions Class="pt-3">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="@(async () => await Submit())">Сохранить</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>