@page "/"

<MudGrid Class="mt-4">
    <MudItem xs="12" sm="12" md="12">
        <MudText Typo="Typo.h5" Inline="@true">Список водителей</MudText>
    </MudItem>
    <MudItem xs="4">
        <MudTextField @bind-Value="_searchRequest.FullName" For="() => _searchRequest.FullName" Label="Поиск"></MudTextField>
    </MudItem>
    <MudItem xs="4">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="@(async () => await _table.SearchAsync())">Найти</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(Create)">Добавить водителя</MudButton>
    </MudItem>
    
    <MudItem xs="12" sm="12" md="12" Class="pt-4">
        <DriverTable @ref="_table" SearchRequest="_searchRequest"></DriverTable>
    </MudItem>
</MudGrid>
