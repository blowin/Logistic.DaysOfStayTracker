@* ReSharper disable once ConditionIsAlwaysTrueOrFalse *@
<MudTable Items="@_items" Hover="true" Breakpoint="Breakpoint.Md" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>Водитель</MudTh>
        <MudTh>Дата въезда</MudTh>
        <MudTh>Дата выезда</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Driver">@context.DriverFullName</MudTd>
        <MudTd DataLabel="Start">@context.Start</MudTd>
        <MudTd DataLabel="End">@context.End</MudTd>
        <MudTd>
            <MudButton Color="Color.Primary" OnClick="() => Edit(context.Id)">Edit</MudButton>
            <MudButton Color="Color.Primary" OnClick="@(async () => await Delete(context.Id))">Delete</MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudPagination Color="Color.Primary" Count="@_items.PageCount" Selected="@SearchRequest.Page" SelectedChanged="PageChanged" Class="pa-4"></MudPagination>
    </PagerContent>
</MudTable>